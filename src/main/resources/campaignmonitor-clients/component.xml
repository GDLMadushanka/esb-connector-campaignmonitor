<component name="campaignmonitor-clients" type="synapse/template">
    <subComponents>
        <component name="listCampaigns">
            <file>listCampaigns.xml</file>
            <description>Returns a list of all draft campaigns belonging to the client including
                from name, from email, reply to email, preview URL, ID, subject, name, and the date
                the draft was created
            </description>
        </component>
        <component name="listSubscriberLists">
            <file>listSubscriberLists.xml</file>
            <description>Returns all the subscriber lists that belong to the client, including the
                list name and ID
            </description>
        </component>
        <component name="addSubscribersToList">
            <file>addSubscribersToList.xml</file>
            <description>Import Subscribers to list</description>
        </component>
    </subComponents>
</component>